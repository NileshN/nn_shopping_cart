    <div class="new_product">
      <%= link_to 'Add New Product', new_product_path if user_signed_in? && current_user.admin? %>
    </div>
    <div class="content_section">
      <% if @products.any? %>
        <h2>Our Products</h2>
        
        <% @products.each do |product| %>
          <%= render :partial => "products/product", :locals => { :product => product } %>
        <% end %>
        
        <div class="cleaner"></div>
      
        <div class="button_01"><a href="#">View All</a></div>
      <% else %>
        Sorry, there are no products available currently. Kindly visit again in an hour!
      <% end %>
    </div>
  </div>