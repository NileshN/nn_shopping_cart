<div style="float:right; font-size:16px; padding-top:20px; color: white">
<% if user_signed_in? %>
  <%= "Welcome #{current_user.email}" %>
  <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
<% else %>
  <%= link_to "Login", new_user_session_path, :class => "login" %> 
<% end %>
<% if user_signed_in? && current_user.cart %> 
  <br />Your cart total : $<%= current_user.cart.total %>/-
  <br /><%= link_to "View Cart", carts_index_path %>
<% end %> 
</div>
